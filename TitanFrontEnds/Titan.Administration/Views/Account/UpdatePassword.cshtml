@model string

@{
    ViewBag.Title = "My Account";
}

<h2>My Account</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
    </div>

    <div Class="form-group row">
        <div class="control-label col-md-3">Password:</div>
        <div Class="col-md-3">
            @{
                var empty = "";
                @Html.EditorFor(Model => empty, new { htmlAttributes = new { @class = "form-control", placeholder = "Password", @type = "password" } })
                @Html.HiddenFor(model => model, new { htmlAttributes = new { @class = "form-control", @type = "token" } });
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update Password" class="btn btn-default" />
        </div>
    </div>
}

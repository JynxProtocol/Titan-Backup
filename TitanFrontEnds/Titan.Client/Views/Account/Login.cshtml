@{
    ViewData["Title"] = "Login";
}

<br />
<br />

<div class="card">
    <div class="card-body">
        <table>
            <tbody>
                <tr>
                    <td>
                        <p><img src="~/content/images/sabre-rail-logo.png" width="250" /></p>
                        <p><img src="~/content/images/Train_Logo.png" /></p>
                    </td>
                    <td>
                        @if (ViewBag.FailedLogin == true)
                        {
                            <h2><strong>Login failed. Please try again</strong></h2>

                            <br />
                        }
                        else
                        {
                            <h2><strong>Please sign in</strong></h2>

                            <br />
                        }
                        <form asp-action="login" method="post">
                            <div class="form-group">
                                <label>User Name</label>
                                <input type="text" class="form-control" id="User" name="User" placeholder="Enter user name">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
                            </div>
                            <br />
                            <input type="hidden" class="form-control" id="ReturnUrl" name="ReturnUrl" value="@ViewBag.ReturnUrl">
                            <div class="form-check">
                                <button class="btn btn-info" type="reset">Reset</button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@if (ViewBag.FailedLogin == true)
{
    <p style="text-align: center;">&nbsp;</p>
    <p style="text-align: center;">@Html.ActionLink("Click here if you have forgotton  your password", nameof(AccountController.ResetPasswordRequest), typeof(AccountController).ControllerName())</p>
}
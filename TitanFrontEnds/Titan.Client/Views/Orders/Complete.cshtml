                <td>@Html.DisplayFor(Model => Order.DateReceived)</td>
                <td>@Html.DisplayFor(Model => Order.CreatedBy)</td>
                <td>@Html.DisplayFor(Model => Order.Sor)</td>
                <td>@Html.DisplayFor(Model => Order.ConID)</td>

@model List<OrderDTO>

@{
    ViewBag.Title = "Completed orders";
}

<h2>Complete Orders</h2>

<table class="table table-bordered table-repsonsive table-hover table-striped" id="sortTable">
    <thead>
        <tr>
            <th>OrderID</th>
            <th>GRN</th>
            <th>Customer</th>
            <th>Customer Order Number</th>
            <th>DateReceived</th>
            <th>CreatedBy</th>
            <th>SOR</th>
            <th>Contract No</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Order in Model)

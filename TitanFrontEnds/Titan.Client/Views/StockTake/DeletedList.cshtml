@model StockTakeListDTO

@{
    ViewBag.Title = "Deleted stock takes";
    string DateDefault = "Never";
}

<h2>Deleted stocktakes</h2>

<table class="table table-bordered table-repsonsive table-hover table-striped" id="sortTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(StockTakes => 
                    StockTakes.Active.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(StockTakes => 
                    StockTakes.Active.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(StockTakes => 
                    StockTakes.Active.FirstOrDefault().Warehouse)
            </th>
            <th>
                @Html.DisplayNameFor(StockTakes => 
                    StockTakes.Active.FirstOrDefault().DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(StockTakes => 
                    StockTakes.Active.FirstOrDefault().Status)
            </th>
            <th>
                @Html.DisplayNameFor(StockTakes => 
                    StockTakes.Active.FirstOrDefault().Completion)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (StockTakeDTO Item in Model.Deleted)
        {
            <tr>
                <td>
                    @Html.DisplayFor(Model => Item.Id)
                </td>
                <td>
                    @Html.DisplayFor(Model => Item.Name)
                </td>
                <td>
                    @Html.DisplayFor(Model => Item.Warehouse)
                </td>
                <td>
                    @if (Item.DateCreated != null)
                    {
                        @Html.DisplayFor(Model => Item.DateCreated)
                    }
                    else
                    {
                        @Html.DisplayFor(Model => DateDefault)
                    }
                </td>
                <td>
                    @Html.DisplayFor(Model => Item.Status)
                </td>
                <td>
                    @Html.DisplayFor(Model => Item.Completion)
                </td>
                <td>
                    @Html.ActionLink(
                        "View", 
                        nameof(StockTakeController.Details), 
                        new { id = Item.Id }, 
                        new { @class = "btn btn-primary" }
                    )
                </td> 
            </tr>
        }
    </tbody>
</table>

<script>
    $('#sortTable').DataTable();
</script>